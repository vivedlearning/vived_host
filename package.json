{
  "name": "vivedlearning_host",
  "version": "1.0.0",
  "description": "Public Host package for the VIVED Learning App system",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --watch --config jestconfig.json",
    "testOnce": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm testOnce && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://amospatrick@bitbucket.org/cyberscience3d/vivedlearning_host.git"
  },
  "keywords": [
    "VIVED"
  ],
  "author": "Amos Patrick",
  "license": "ISC",
  "homepage": "https://bitbucket.org/cyberscience3d/vivedlearning_host#readme",
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.3"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "@types/react": "^17.0.5",
    "react": "^17.0.2"
  }
}
